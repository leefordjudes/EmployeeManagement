@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EmployeeEditViewModel
@{
    ViewBag.Title = "Edit";
    var photopath = "~/images/" + (Model.ExistingPhotoPath ?? "Jeep.webp");
}

<h1>Edit</h1>
<form enctype="multipart/form-data" asp-action="Edit" asp-controller="Home" method="post">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <select asp-for="Department" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photos" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <div class="custom-file">
                <input asp-for="Photos" multiple class="form-control custom-file-input">
                <label class="custom-file-label">Click here to change photo</label>
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-2">
        <img src="@photopath" id="photopath" class="imageThumbnail" asp-append-version="true" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    //var filename = $(this).val().split("\\").pop();
                    //$(this).next('.custom-file-label').html(filename);
                    //console.log($(this));
                    var fileLable = $(this).next('.custom-file-label');
                    var imgphotopath = $(this).next('#photopath');
                    var files = $(this)[0].files;
                    if (files.length > 1) {
                        fileLable.html(files.length + ' files selected');
                    } else if (files.length == 1) {
                        fileLable.html(files[0].name);
                        readURL(this);
                    }
                });
            });
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#photopath').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#imgInp").change(function () {
                readURL(this);
            });
        </script>
    }
</form>

